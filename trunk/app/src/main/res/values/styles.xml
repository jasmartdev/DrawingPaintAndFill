<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="control_button">
        <item name="android:layout_width">@dimen/control_icon_size</item>
        <item name="android:layout_height">@dimen/control_icon_size</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:strokeColor" tools:targetApi="lollipop">#FF999999</item>
        <item name="android:solidColor">#00000000</item>
    </style>

    <style name="control_color_icon">
        <item name="android:layout_width">@dimen/control_icon_size</item>
        <item name="android:layout_height">@dimen/control_icon_size</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:src">@drawable/paint</item>
        <item name="android:contentDescription">@string/paint</item>
    </style>

</resources>
